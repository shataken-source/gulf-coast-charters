# =====================================================
# GULF COAST CHARTERS - ENVIRONMENT VARIABLES
# =====================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git
# =====================================================

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Gulf Coast Charters"

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_JWT_SECRET=your_jwt_secret_here

# Database (for direct connections if needed)
DATABASE_URL=postgresql://postgres:[password]@db.your-project.supabase.co:5432/postgres

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Mapbox
NEXT_PUBLIC_MAPBOX_TOKEN=pk.eyJ1your_token_here

# Email (SendGrid)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key_here
SMTP_FROM=noreply@gulfcoastcharters.com
SENDGRID_API_KEY=SG.your_api_key_here

# Email (Alternative - Generic SMTP)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM=your_email@gmail.com

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# OpenAI (for Fishy chatbot)
OPENAI_API_KEY=sk-your_openai_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Pusher (Real-time websockets)
NEXT_PUBLIC_PUSHER_APP_KEY=your_app_key_here
PUSHER_APP_ID=your_app_id_here
PUSHER_SECRET=your_secret_here
PUSHER_CLUSTER=us2

# AWS S3 (for file storage - optional if using Supabase Storage)
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=gulf-coast-charters

# Cloudinary (image hosting - optional)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Apple OAuth (optional)
APPLE_CLIENT_ID=your_apple_client_id
APPLE_CLIENT_SECRET=your_apple_client_secret

# Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# Sentry (Error tracking - optional)
SENTRY_DSN=https://your_sentry_dsn
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn

# Redis (optional - for caching)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Feature Flags
NEXT_PUBLIC_ENABLE_TOURNAMENTS=true
NEXT_PUBLIC_ENABLE_MESSAGING=true
NEXT_PUBLIC_ENABLE_WEATHER_ALERTS=true
NEXT_PUBLIC_ENABLE_AI_CHATBOT=true

# Development
NODE_ENV=development
NEXT_PUBLIC_DEBUG=false

# =====================================================
# PRODUCTION SETTINGS
# =====================================================
# For production, set these in Vercel/hosting dashboard:
# - NODE_ENV=production
# - NEXT_PUBLIC_APP_URL=https://gulfcoastcharters.com
# - All API keys should be production keys (not test keys)
# =====================================================
